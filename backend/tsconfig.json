{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",               
    "moduleResolution": "node16",        
    "esModuleInterop": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
